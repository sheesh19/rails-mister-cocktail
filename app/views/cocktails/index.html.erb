<%= render 'shared/banner' %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card">
            <div id="card-image" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= image_path("#{cocktail.name.downcase}.jpg") %>) center / cover no-repeat;"></div>
            <div class="card-content">
              <div class="card-name">
                <%= cocktail.name %>
              </div>
              <div class="card-info">
                <%#= cocktail.dose %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
