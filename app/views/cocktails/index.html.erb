<%= render 'shared/banner' %>


<div class="container-search">
  <%= render 'shared/search' %>
</div>

<div class="cards-container">
    <% @cocktails.each do |cocktail| %>
      <div class="row">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card">
            <div id="card-image" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>') center / cover no-repeat;"></div>
            <div class="card-content">
              <div class="card-name">
                <%= cocktail.name %>
              </div>
              <div class="card-info">
                <%#= link_to "Add New", cocktail_path(cocktail), class: "btn btn-outline-success" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

</div>
