<div id="shows-cocktail-container">
  <div class="display-cocktail">
    <div class="display-info">
      <div class="display-name">
        <h2><%= @cocktail.name %></h2>
      </div>
      <div class="display-info">
        <h4>Ingredients List:</h4>
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li>
              <%= dose.description %> | <%= Ingredient.find(dose.ingredient_id).name %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="display-form">
        <%= render 'doses/form', cocktail: @cocktail %>
      </div>
    </div>
  </div>
  <%= cl_image_tag @cocktail.photo, class:'cocktail-image-upload' %>
</div>
