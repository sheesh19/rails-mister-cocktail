<div class="cards-container">
  <div id="carousel" class="carousel slide" data-ride="carousel" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= image_path("#{@cocktail.name.downcase}.jpg") %>) center / cover no-repeat;">
      <div class="card card-drink">
        <h2><%= @cocktail.name %></h2>
        <h4>Ingredients List</h4>
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li><%= dose.description %> | <%= Ingredient.find(dose.ingredient_id).name %></li>

            <% end %>
            <li>
              <%= link_to 'Add Ingredients', new_cocktail_dose_path(@cocktail) %>
            </li>
          </ul>
      </div>
  </div>
</div>


